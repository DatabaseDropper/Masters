@using OnlineJudge.Models.Domain
@using OnlineJudge.Miscs
@using OnlineJudge.Parsing
@model Result<Assignment>
@{
    ViewData["Title"] = "Delete Assignment";
}

<div id="content_box">
@if (Model.Success)
{
    <b>Are you sure you want to delete this assignment?</b>
    <br />
    <br />
    <b>Title:</b>
    <a>@Model.Value.Title</a>
    <br />
    <b>Description:</b>
    <a>@Model.Value.Description</a>
    
    <br />
    <br />
    <form method="post" action="Delete">
         @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Value.Id">
        <input class="btn btn-danger" type="submit" value="Yes" />
        <a href="/" class="btn btn-success" role="button">Cancel</a>
    </form>
}
else
{
    <b>Something went wrong</b>
    <b>@Model.Error</b>
}
</div>

<style>
    #content_box
    {
        margin-top: 15px;
        margin: auto;
        width: 50%;
        padding: 10px
    }
</style>

<script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
<script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>